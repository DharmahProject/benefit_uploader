<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - BUMA Authenticator</title>

    <environment include="Development">
        <!-- Favicon icon -->
        <link rel="icon" href="~/themes/images/favicon.ico" type="image/x-icon">
        <!-- vendor css -->
        <link rel="stylesheet" href="~/themes/css/style.css" />
        <!-- fontawesome icon -->
        <link rel="stylesheet" href="~/themes/fonts/fontawesome/css/fontawesome-all.min.css" />
        <!-- animation css -->
        <link rel="stylesheet" href="~/themes/plugins/animation/css/animate.min.css" />
    </environment>

    <environment exclude="Development">
        <!-- Favicon icon -->
        <link rel="icon" href="~/themes/images/favicon.ico" type="image/x-icon">
        <link rel="stylesheet" href="~/themes/css/style.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/themes/fonts/fontawesome/css/fontawesome-all.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/themes/plugins/animation/css/animate.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <div>
        @RenderBody()
    </div>

    <environment include="Development">
        <!-- Required Js -->
        <script src="~/themes/js/vendor-all.min.js"></script>
        <script src="~/themes/plugins/bootstrap/js/bootstrap.min.js"></script>
        <script src="~/themes/js/pcoded.min.js"></script>
    </environment>
    <environment exclude="Development">
        <!-- Required Js -->
        <script src="~/themes/js/vendor-all.min.js"></script>
        <script src="~/themes/plugins/bootstrap/js/bootstrap.min.js"></script>
        <script src="~/themes/js/pcoded.min.js"></script>
    </environment>
</body>
</html>

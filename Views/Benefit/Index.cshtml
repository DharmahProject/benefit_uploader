@model IEnumerable<BenefitUploader.Models.Benefit>

@{
    ViewData["Title"] = "Uploaded List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-sm-12">
        <div class="col-sm-10">
            <label style="font-size:30px">Uploaded List</label>
        </div>
        <div class="col-sm-2" style="padding-top:15px">

            <a asp-action="Export" title="Export to excel" asp-route-id="ExportBenefit">Export to excel</a>
        </div>
    </div>

</div>
<table></table>
<style>
    .myClass label {
        font-weight: bold;
    }

    .responsive-table thead > tr {
        background: linear-gradient(to right, rgb(10, 207, 254) 0%, rgb(73, 90, 255) 100%) !important;
        color: white !important;
    }
</style>

<div class="main-body">
    <div class="page-wrapper">
        <!-- [ Main Content ] start -->
        <div class="row">
            <!-- [ sample-page ] start -->
            <div class="col-sm-12">
                <div class="card">

                    <div class="card-block">
                        <div class="table-responsive">
                            <table id="responsive-table-custom" class="responsive-table display table nowrap" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.TahunPerobatan)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.EmployeeID)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.PersArea)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CutOffDate)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.LimitTahunan)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.KlaimDibayar)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.OverPlafon)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CreatedBy)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CreatedDate)
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.Label(item.TahunPerobatan)
                                            </td>
                                            <td>
                                                @Html.Label(item.EmployeeID)
                                            </td>
                                            <td>
                                                @Html.Label(item.Name)
                                            </td>
                                            <td>
                                                @Html.Label(item.PersArea)
                                            </td>
                                            <td>
                                                @Html.Label(item.CutOffDate.ToString("dd-MM-yyyy"), item.CutOffDate.ToString("dd-MM-yyyy"), new { @class = "myClass" })
                                            </td>
                                            <td>
                                                @Html.Label(item.LimitTahunan, item.LimitTahunan, new { @class = "myClass" })
                                                @*@Html.LabelFor(item => item.LimitTahunan, new { @class = "className" })*@
                                            </td>
                                            <td>
                                                @Html.Label(item.KlaimDibayar, item.KlaimDibayar, new { @class = "myClass" })
                                            </td>
                                            <td>
                                                @Html.Label(item.OverPlafon, item.OverPlafon, new { @class = "myClass" })
                                            </td>
                                            <td>
                                                @Html.Label(item.CreatedBy, item.CreatedBy, new { @class = "myClass" })
                                                @*@Html.Label(item.CreatedBy)*@
                                            </td>
                                            <td>
                                                @Html.Label(item.CreatedDate.ToString("dd-MM-yyyy hh:mm:ss"))
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- [ sample-page ] end -->
        </div>
        <!-- [ Main Content ] end -->
    </div>
</div>

<style type="text/css">
    .goliveprd {
        background-color: #BEE4FF;
    }
</style>
